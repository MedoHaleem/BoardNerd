<div>
  <%= form_for @category, category_path(@conn, :create), fn f -> %>
   <div class="form-group">
     <%= label f, :name, "Name"%>
     <%= text_input f, :name, class: "form-control"  %>
    </div>
     <%= error_tag f, :name %>
     <br />
     <%= submit "Create", class: "btn btn-primary" %>
  <% end %>
</div>